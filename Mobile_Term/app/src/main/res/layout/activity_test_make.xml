<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/test_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/JColor" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/test_toolbar">

        <SeekBar
            android:id="@+id/test_brush_stroke"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_toolbar"
            android:background="#83bee3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/test_toolbar">

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/test_pdfView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <org.androidtown.mobile_term.DrawingView
                android:id="@+id/test_drawingView"
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>